<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<settings>
	    <!-- 启用懒加载，必须按照下面方式配置 -->
		<setting name="lazyLoadingEnabled" value="true"/>
		<!-- 将积极加载改为消极加载即按需加载。必须写,且为false才会懒加载 -->  
		<setting name="aggressiveLazyLoading" value="false"/>
		<!-- 开启二级缓存 -->
		<setting name="cacheEnabled" value="true"/>
	</settings>

	<!-- 设置类的别名 -->
	<typeAliases>
		<typeAlias type="com.qianfeng.entity.Users" alias="users"/>
		<typeAlias type="com.qianfeng.entity.Authority" alias="authority"/>
		<typeAlias type="com.qianfeng.entity.LoginLog" alias="Loginlog"/>
		<typeAlias type="com.qianfeng.entity.Role" alias="Role"/>
		<typeAlias type="com.qianfeng.entity.Staff" alias="Staff"/>
		<typeAlias type="com.qianfeng.entity.Grade" alias="Grade"/>
		<typeAlias type="com.qianfeng.entity.Student" alias="Student"/>
		<typeAlias type="com.qianfeng.entity.Course" alias="Course"/>
		<typeAlias type="com.qianfeng.entity.Department" alias="Department"/>
		<typeAlias type="com.qianfeng.entity.Check" alias="Check"/>
		
	</typeAliases>

	
	<!-- 引入映射文件 -->
	<mappers>
		
<!-- 		<mapper resource="com/qianfeng/mapping/UserInfoMapper.xml" /> -->
	</mappers>
</configuration>
